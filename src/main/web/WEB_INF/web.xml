<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Trello-app</display-name>

    <servlet>
        <servlet-name>workspaceServlet</servlet-name>
        <servlet-class>spd.trello.web.WorkspaceServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>workspaceServlet</servlet-name>
        <url-pattern>/workspaces</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>boardServlet</servlet-name>
        <servlet-class>spd.trello.web.BoardServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>boardServlet</servlet-name>
        <url-pattern>/boards</url-pattern>
    </servlet-mapping>

</web-app>
